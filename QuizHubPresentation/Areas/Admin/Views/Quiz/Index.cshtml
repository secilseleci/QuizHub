@model QuizListViewModel

<div class="text-center my-5 border-bottom">
    <div class="display-6">Quizzes</div>
</div>

<div class="text-center">
    <div class="d-flex justify-content-end my-3">
        <a class="btn btn-outline-success" asp-action="Create">
            <i class="fa fa-plus"></i>
            Create Quiz
        </a>
        <a class="btn btn-success" asp-action="UploadExcel">
            <i class="fa fa-plus"></i>
            Upload Quiz
        </a>
    </div>
</div>


<div class="row">
    <div class="col-md-3">
        @await Component.InvokeAsync("QuizFilterMenu")
        
    </div>
    <div class="col-md-9">
        <table class="table table-striped table-hover">
            <thead>
                <tr>
                    <th>QuizId</th>
                    <th>Quiz Title</th>
                    <th>Question Count</th>
                    <th>Operations</th>
                </tr>
            </thead>
            <tbody>
                @foreach (Quiz q in Model.Quizzes)
                {
                    <tr>
                        <td>@q.QuizId</td>
                        <td>@q.Title</td>
                        <td>@q.QuestionCount</td>
                    
                        <td>
                            <div class="btn-group">
                                <a data-toggle="tooltip" data-placement="top" title="Edit" class="btn btn-warning"
                                asp-action="Update" asp-route-id="@q.QuizId">
                                    <i class="fa fa-edit"></i>
                                </a>
                                <a data-toggle="tooltip" data-placement="top" title="Delete" class="btn btn-danger"
                                   asp-action="Delete" asp-route-id="@q.QuizId">
                                    <i class="fa fa-trash"></i>
                                </a>
                                <a data-toggle="tooltip" data-placement="top" title="Web" class="btn btn-info"
                                   target="_blank" asp-area="" asp-controller="QuizId" asp-action="Get"
                                   asp-route-id="@q.QuizId">
                                    <i class="fa fa-search"></i>
                                </a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>

        <div class="text-center">
            <div page-model="@Model?.Pagination" page-action="Index" page-classes-enabled="true" page-class="btn"
                page-class-normal="btn-outline-dark" page-class-selected="btn-secondary" class="btn-group">
            </div>
        </div>
    </div>
</div>




@section Scripts
    {
    <script type="text/javascript">
        $(document).ready(() => {
            $('[data-toggle="tooltip"]').tooltip()
        });
    </script>
}