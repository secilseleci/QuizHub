@using System.Diagnostics
@model QuizDtoForUpdate

<div class="text-center">
    <div class="display-6">Update</div>
</div>



<form method="post" asp-action="Update" enctype="multipart/form-data">

    <div class="text-danger" asp-validation-summary="All"></div>

    <input type="hidden" asp-for="QuizId" />

    <div class="form-group my-3">
        <label asp-for="Title"></label>
        <input asp-for="Title" class="form-control" />
    </div>

    <div class="form-check form-switch">
        <input asp-for="ShowCase" class="form-check-input" type="checkbox" role="switch" id="flexSwitchCheckDefault">
        <label class="form-check-label" for="flexSwitchCheckDefault">Showcase</label>
    </div>

    @if (Model.Questions != null && Model.Questions.Count > 0)
    {
        <div class="form-group">
            <h4>Question 1</h4>
            <input type="hidden" asp-for="Questions[0].QuestionId" />
            <label asp-for="Questions[0].QuestionText">Question Text</label>
            <textarea asp-for="Questions[0].QuestionText" class="form-control"></textarea>
            
        </div>

        <div class="form-group">
            <label>Options</label>
            <ul>
                @for (int i = 0; i < Model.Questions[0].Options.Count; i++)
                {
                    <li>
                        <input asp-for="Questions[0].Options[i].OptionText" class="form-control" placeholder="Option @(i + 1)" />
                        <input type="radio" name="Questions[0].CorrectOptionId" value="@Model.Questions[0].Options[i].OptionId"
                        @(Model.Questions[0].CorrectOptionId == Model.Questions[0].Options[i].OptionId ? "checked" : "") /> Correct Answer
                        <input type="hidden" asp-for="Questions[0].Options[i].OptionId" />
                    </li>
                }
            </ul>
        </div>

    }
    else
    {
        <p>No questions available to update.</p>
    }

    <div class="form-group my-3">
        <div class="btn-group">
            <button class="btn btn-primary" type="submit">
                <i class="fa fa-save"></i>
                Update
            </button>
            <a asp-action="Index" class="btn btn-outline-primary">
                <i class="fa fa-list"></i>
                Quizzes
            </a>
        </div>
    </div>
</form>
