@page "/getintouch"

<div class="container my-5">
    <!-- Başlık -->
    <div class="text-center mb-5">
        <h1 class="display-6 text-primary fw-bold">Contact Us</h1>
        <p class="lead text-secondary">Get in touch with QuizHub for support and information</p>
    </div>

    <!-- İletişim Kartları -->
    <div class="row text-center">
        <!-- Telefon Kartı -->
        <div class="col-md-4 mb-4">
            <div class="card border-0 shadow h-100" style="border-radius: 15px;">
                <div class="card-body">
                    <div class="icon-circle mb-3" style="color: #007bff;">
                        <i class="fa fa-phone fa-3x"></i>
                    </div>
                    <h5 class="card-title text-primary fw-bold">Call Us</h5>
                    <p class="card-text text-muted">QuizHub Bilgi ve Destek Hattı</p>
                </div>
            </div>
        </div>

        <!-- Adres Kartı -->
        <div class="col-md-4 mb-4">
            <div class="card border-0 shadow h-100" style="border-radius: 15px;">
                <div class="card-body">
                    <div class="icon-circle mb-3" style="color: #28a745;">
                        <i class="fa fa-map-marker-alt fa-3x"></i>
                    </div>
                    <h5 class="card-title text-success fw-bold">Our Address</h5>
                    <p class="card-text text-muted">
                        Bilgi Teknolojileri ve İletişim Kurumu<br>
                        No: 123, Posta Kodu: 56789<br>
                        Çankaya, Ankara
                    </p>
                </div>
            </div>
        </div>

        <!-- E-Posta Kartı -->
        <div class="col-md-4 mb-4">
            <div class="card border-0 shadow h-100" style="border-radius: 15px;">
                <div class="card-body">
                    <div class="icon-circle mb-3" style="color: #17a2b8;">
                        <i class="fa fa-envelope fa-3x"></i>
                    </div>
                    <h5 class="card-title text-info fw-bold">Email Us</h5>
                    <p class="card-text text-muted">QuizHub@gmail.com.tr</p>
                </div>
            </div>
        </div>
    </div>
</div>

 
