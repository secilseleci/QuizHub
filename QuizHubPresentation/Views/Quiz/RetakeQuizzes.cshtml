@{
    ViewData["Title"] = "Retake Quizzes";
}

<div class="container my-5">
    <div class="text-center mb-4">
        <h1 class="page-title">Retake Quizzes</h1>
        <p class="page-subtitle">
            Boost your score by retaking some quizzes!
        </p>
    </div>

    <div class="row justify-content-center">
        <div class="col-md-12">
            @await Component.InvokeAsync("UserQuizCards", new { status = "Retake" })
        </div>
    </div>
</div>
