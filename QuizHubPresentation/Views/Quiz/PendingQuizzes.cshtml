@{
    ViewData["Title"] = "Pending Quizzes";
}

<div class="container my-5">
    <div class="text-center mb-4">
        <h1 class="page-title">Pending Quizzes</h1>
        <p class="page-subtitle">There are quizzes waiting for you. Hurry up and complete them!</p>
    </div>

    <div class="row justify-content-center">
        <div class="col-md-12">
            @await Component.InvokeAsync("UserQuizCards", new { status = "Pending" })
        </div>
    </div>
</div>
