@model QuizHubPresentation.Models.QuizListViewModel

<div class="row">
    <div class="col-md-3">
      
        @await Component.InvokeAsync("QuizFilterMenu")
        <div quizzes="" number="3"></div>
    </div>
    <div class="col-md-9">
        <div class="row my-3">
            @foreach (Quiz q in Model.Quizzes)
            {
                <partial name="_QuizCard" model="@q" />
            }
        </div>
        <div class="text-center">
            <div page-model="@Model?.Pagination" page-action="Index" page-classes-enabled="true" page-class="btn"
                 page-class-normal="btn-outline-dark" page-class-selected="btn-secondary" class="btn-group">
            </div>
        </div>
    </div>
</div>


@section Footer {
}