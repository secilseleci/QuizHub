@model Quiz
 
<div class="col-md-3 my-3">
    <div class="card" style="width: 18rem;">
            <div class="card shadow">
                <img src="~/images/quizimg.jpg" class="card-img-top" alt="Quiz Image">

                <div class="card-body">
                    <h5 class="card-title mb-3 text-center">@Model.Title</h5>
                 </div>
                  @if (User.Identity.IsAuthenticated)
                    {
                <div class="card-footer d-flex justify-content-between">
                    <a asp-action="Details" asp-controller="Home" asp-route-id="@Model.QuizId" class="btn btn-primary">Details</a>
                    <a asp-action="Start" asp-controller="Home" asp-route-id="@Model.QuizId" class="btn btn-secondary">Start</a>
                </div>
            }
            </div>
        </div>
    </div>
 