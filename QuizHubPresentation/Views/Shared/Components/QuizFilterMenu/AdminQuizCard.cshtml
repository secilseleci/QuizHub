@model IEnumerable<Entities.Models.Quiz>

<div class="row">
    @foreach (var quiz in Model)
    {
        <div class="col-md-3 my-3">
            <div class="card" style="width: 18rem;">
                <div class="card shadow">
                    <img src="~/images/quizimg.jpg" class="card-img-top" alt="Quiz Image">
                    <div class="card-body">
                        <h5 class="card-title mb-3 text-center">@quiz.Title</h5>
                        <div class="card-footer d-flex justify-content-between">
                            <a asp-action="Details" asp-controller="Home" asp-route-id="@quiz.QuizId" class="btn btn-primary">Details</a>
                            <a asp-action="Start" asp-controller="Home" asp-route-id="@quiz.QuizId" class="btn btn-secondary">Start</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
</div>
