@model QuizDtoForUser

<div class="container mt-5">
    <div class="card shadow">
        <div class="card-header d-flex justify-content-between align-items-center">
            <h5 class="mb-0">Quiz App</h5>
            <button class="btn btn-primary">Kalan Süre: <span id="timeLeft">10</span></button>  <!-- Timer için -->
        </div>

        <div class="card-body">
            <!-- Sorunun başlığı -->
            <h4 class="card-title">@Model.Questions.First().QuestionText</h4>

            <!-- Seçenekler - Radyo butonları -->
            <div class="list-group mt-3">
                @foreach (var option in Model.Questions.First().Options)
                {
                    <label class="list-group-item d-flex align-items-center">
                        <input type="radio" name="questionOptions" value="@option.OptionText" class="me-2">
                        <span>@option.OptionText</span>
                    </label>
                }
            </div>
        </div>

        <div class="card-footer d-flex justify-content-between">
            <!-- Soru numarası -->
            <span>1 / @Model.QuestionCount</span>

            <!-- Next butonu -->
            <button class="btn btn-primary" id="nextButton">Next</button>
        </div>
    </div>
</div>

<script>
    // Timer için basit bir sayaç
    var timeLeft = 10;
    var timer = setInterval(function () {
        timeLeft--;
        document.getElementById("timeLeft").innerHTML = timeLeft;
        if (timeLeft <= 0) {
            clearInterval(timer);
            // Zaman dolduğunda otomatik sonraki soruya geçebiliriz
            document.getElementById("nextButton").click();
        }
    }, 1000);

    // Next butonuna tıklayınca bir sonraki soruya geçiş
    document.getElementById("nextButton").addEventListener("click", function () {
        // Sıradaki soruya AJAX isteği ile geçişi buradan sağlayacağız
    });
</script>
