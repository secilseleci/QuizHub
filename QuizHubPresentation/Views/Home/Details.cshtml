@model Entities.Dtos.QuizDtoForUserShowcase  

<div class="container mt-5">
    <h2 class="text-center mb-4">Quiz Details</h2>
    
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-sm">
                 <img src="~/images/quizimg.jpg" class="card-img-top" alt="Quiz Image">
                
                <div class="card-body">
                    <h5 class="card-title mb-3 text-center">@Model.Title</h5>
                    <p class="card-text text-center">Just <strong>@Model.QuestionCount</strong> Questions</p>
                    <p class="card-text text-center">Just <strong>@Model.QuestionCount</strong> minutes</p>
                </div>

                <div class="card-footer d-flex justify-content-between">
                    <a href="@Url.Action("Index", "Home")" class="btn btn-primary">Back to Quizzes</a>
                    <a href="@Url.Action("Start", "Home", new { id = @Model.QuizId })" class="btn btn-success">Start Now</a>  <!-- Buton quiz başlatır -->
                </div>
            </div>
        </div>
    </div>
</div>
