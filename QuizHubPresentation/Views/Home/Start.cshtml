@{
    ViewBag.Title = "Start Quiz";
}

<!-- Sayfanın tamamını kapsayan div -->
<div class="d-flex flex-column min-vh-100 justify-content-center align-items-center">
    <!-- Start Now Butonu -->
    <button type="button" class="btn btn-success btn-lg animate__animated animate__pulse animate__infinite" data-bs-toggle="modal" data-bs-target="#startModal">
        <i class="fas fa-play-circle"></i> Start Now
    </button>

    <!-- Modal Yapısı -->
    <div class="modal fade" id="startModal" tabindex="-1" aria-labelledby="startModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content shadow-lg">
                <div class="modal-header bg-success text-white">
                    <h5 class="modal-title" id="startModalLabel">
                        <i class="fas fa-info-circle"></i> @ViewBag.QuizTitle - Ready to Start?
                    </h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <!-- Bilgilendirme Metni -->
                    <p class="lead"><strong>@ViewBag.QuizTitle</strong> quizine başlamak üzeresiniz. Lütfen aşağıdaki kuralları gözden geçirin:</p>
                    <ul class="list-group text-start mb-4">
                        <li class="list-group-item"><strong>1 dakika</strong> içinde cevaplanmayan sorular <span class="text-danger">boş</span> sayılacaktır.</li>
                        <li class="list-group-item"><strong>Önceki sorulara geri dönemezsiniz.</strong></li>
                        <li class="list-group-item">Her soruyu doğru cevaplayıp <strong>Next</strong> butonuna basarak sıradaki soruya geçebilirsiniz.</li>
                        <li class="list-group-item">Doğru/yanlış sayınızı quiz sonlandıktan sonra görebileceksiniz.</li>
                    </ul>
                    <p><strong>Başarılar!</strong></p>
                </div>
                <div class="modal-footer">
                    <!-- Start Quiz Butonu (Form ile action'a geçiyoruz) -->
                    <form asp-action="StartQuiz" asp-controller="Home" asp-route-quizid="@ViewBag.QuizId" method="post">
                        <button type="submit" class="btn btn-primary btn-lg">
                            <i class="fas fa-play"></i> Start Quiz
                        </button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- CSS ve JS dosyaları -->
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css" />
<script src="https://kit.fontawesome.com/a076d05399.js"></script>
