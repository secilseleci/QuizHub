@model Entities.Dtos.UserQuizInfoDtoForCompleted

<div class="container text-center mt-5">
    <!-- Başlık -->
    <div class="card shadow-lg p-4">
        <h2 class="display-4 text-success mb-4">
            <i class="fas fa-trophy"></i> Quiz Completed!
        </h2>
        <p class="lead">Congratulations, you've completed the quiz.</p>

        <!-- Sonuçlar Tablosu -->
        <div class="row justify-content-center mt-4">
            <div class="col-md-6">
                <table class="table table-bordered">
                    <thead class="table-light">
                        <tr>
                            <th scope="col">Correct Answers</th>
                            <th scope="col">False Answers</th>
                            <th scope="col">Blank Answers</th>
                            <th scope="col">Score</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td class="text-success">@Model.CorrectAnswer</td>
                            <td class="text-danger">@Model.FalseAnswer</td>
                            <td class="text-danger">@Model.BlankAnswer</td>
                            <td class="text-primary">@Model.Score</td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>

        <!-- Ana Sayfaya Dön Butonu -->
        <div class="mt-5">
            <a href="/Home" class="btn btn-primary btn-lg animate__animated animate__pulse animate__infinite">
                <i class="fas fa-home"></i> Go Back to Home
            </a>
        </div>
    </div>
</div>

<!-- Bootstrap ve animasyon için eklenen CSS ve JS dosyaları -->
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css" />
<script src="https://kit.fontawesome.com/a076d05399.js"></script>
