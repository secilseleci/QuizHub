<div class="container my-5">
    <div class="row  space-between">
        <!-- Sol: Score -->
        <div class="col-md-6">
            @await Component.InvokeAsync("Score")
        </div>

        <!-- Sağ: Weather Info -->
        <div class="col-md-6 text-right">
            <div id="weather-info" class="weather-info">
                <!-- Hava durumu bilgisi burada gösterilecek -->
            </div>
        </div>
    </div>
        <div class="col-md-12">
            <!-- 4 Modern Kart Tasarımı -->
            <div class="row text-center mt-4">

                <!-- Completed Quizzes Kartı -->
                <div class="col-md-6">
                    <div class="card custom-card bg-light mb-4" style="border-radius: 10px;">
                        <div class="card-body">
                            <div class="icon-circle bg-success mb-3">
                                <i class="fas fa-check-circle fa-2x text-white"></i>
                            </div>
                            <h5 class="card-title">Completed Quizzes</h5>
                            <p class="card-text text-muted">View your completed quizzes and check your scores.</p>
                            <a asp-controller="Quiz" asp-action="CompletedQuizzes" class="btn btn-outline-success">Go to Completed</a>
                        </div>
                    </div>
                </div>

                <!-- Pending Quizzes Kartı -->
                <div class="col-md-6">
                    <div class="card custom-card bg-light mb-4" style="border-radius: 10px;">
                        <div class="card-body">
                            <div class="icon-circle bg-warning mb-3">
                                <i class="fas fa-hourglass-half fa-2x text-white"></i>
                            </div>
                            <h5 class="card-title">Pending Quizzes</h5>
                            <p class="card-text text-muted">There are quizzes waiting for you. Hurry up!</p>
                            <a asp-controller="Quiz" asp-action="PendingQuizzes" class="btn btn-outline-warning">See Pending Quizzes</a>
                        </div>
                    </div>
                </div>

                <!-- Retake Quizzes Kartı -->
                <div class="col-md-6">
                    <div class="card custom-card bg-light mb-4" style="border-radius: 10px;">
                        <div class="card-body">
                            <div class="icon-circle bg-info mb-3">
                                <i class="fas fa-redo fa-2x text-white"></i>
                            </div>
                            <h5 class="card-title">Retake Quizzes</h5>
                            <p class="card-text text-muted">Boost your score by retaking some quizzes!</p>
                            <a asp-controller="Quiz" asp-action="RetakeQuizzes" class="btn btn-outline-info">Retake Quizzes</a>
                        </div>
                    </div>
                </div>

                <!-- Continue Quizzes Kartı -->
                <div class="col-md-6">
                    <div class="card custom-card bg-light mb-4" style="border-radius: 10px;">
                        <div class="card-body">
                            <div class="icon-circle bg-primary mb-3">
                                <i class="fas fa-play-circle fa-2x text-white"></i>
                            </div>
                            <h5 class="card-title">Continue Quizzes</h5>
                            <p class="card-text text-muted">Continue where you left off and finish your quizzes!</p>
                            <a asp-controller="Quiz" asp-action="ContinueQuizzes" class="btn btn-outline-primary">Continue Quizzes</a>
                        </div>
                    </div>
                </div>

            </div>
        </div>
    </div>
 
<script>
    document.addEventListener("DOMContentLoaded", function () {
        fetch('/api/weather')
            .then(response => response.json())
            .then(data => {
                const weatherInfo = `${data.weather[0].description}, ${data.main.temp}°C in ${data.name}`;
                document.getElementById('weather-info').innerHTML = weatherInfo;
            })
            .catch(error => {
                console.error('Error fetching weather data:', error);
                document.getElementById('weather-info').innerHTML = "Weather data not available";
            });
    });
</script>
